<html>
<head>
	<title></title>
</head>
<body>
	<div>

		Hi <%= @profile.username.capitalize %>!<br>

		Your last update was <%= time_ago_in_words @profile.updated_at %> ago

		<div>
			<%= form_for(@profile, :url => {:controller => :profiles, :action => :update, :method => :post}, :html => {:multipart => true}) do |f| %>
			<br>
			<%= f.file_field :image %>
			<br>
			<%= f.label :remote_image_url %>
			<%= f.text_field :remote_image_url %>
			<br>

			<%= f.label :first_name %>:
			<%= f.text_field :first_name %><br />
			<%= f.label :last_name %>:
			<%= f.text_field :last_name %><br />
			<%= f.label :address1  %>:
			<%= f.text_field :address1 %><br>
			<%= f.label :address2%>:
			<%= f.text_field :address2 %><br>
			<%= f.label :city %>:
			<%= f.text_field :city %><br>
			<%= f.label :state %>:
			<%= f.text_field :state %><br>
			<%= f.label :zip%>:
			<%= f.text_field :zip %><br>
			<%= f.label :phone %>:
			<%= f.text_field :phone %><br>
			<%= f.label :email %>:
			<%= f.text_field :email %><br>
			<%= f.label :website %>:
			<%= f.text_field :website %><br>
			<%= f.label :description%>:
			<%= f.text_field :description %><br>
			<%= f.submit %></div>		
			<% end %>
		</div>
	</body>
	</html>